rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the requesting user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // User-specific folders: {userId}/genimg/*
    match /{userId}/genimg/{imageId} {
      // Allow read if:
      // 1. Authenticated user accessing their own folder, OR
      // 2. Public read for generated images (needed for display)
      allow read: if true;

      // Allow write if:
      // 1. Authenticated user accessing their own folder, OR
      // 2. Server-side write (request.auth == null means server/admin)
      allow write: if isOwner(userId) || request.auth == null;
    }

    // Legacy chapters folder (if you have old images there)
    // Make it read-only for now
    match /chapters/{imageId} {
      allow read: if true;
      allow write: if request.auth == null; // Allow server writes
    }

    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
